<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>11.0</LangVersion>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    <PackageId>Resizetizer.NT</PackageId>
    <Title>An Jpeg output support of Resizetizer NT for Xamarin Image Assets</Title>
    <Version>0.99.0</Version>
    <Authors>Redth, Dmytro Bondarenko</Authors>
    <Owners>Redth</Owners>
    <summary>Easily and automatically resize your source image assets as part of your build process.</summary>
    <PackageDescription>
      Easily and automatically resize your source image assets as part of your build process.
    </PackageDescription>
    <Copyright>Copyright Â© Redth</Copyright>
    <PackageProjectUrl>https://github.com/bondarenkod/ResizetizerNT</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/bondarenkod/ResizetizerNT</RepositoryUrl>
    <PackageOutputPath>..\artifacts</PackageOutputPath>
    <IncludeBuildOutput>False</IncludeBuildOutput>
    <NoWarn>NU5100;NU5128</NoWarn>
    <DevelopmentDependency>true</DevelopmentDependency>
  </PropertyGroup>

  <ItemGroup>
    <_ItemToPack Include="$(PkgExCSS)\lib\netstandard2.0\ExCSS.dll" />
    <_ItemToPack Include="$(PkgSystem_Memory)\lib\netstandard2.0\System.Memory.dll" />
